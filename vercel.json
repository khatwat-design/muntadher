{
  "version": 2,
  "builds": [
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "GOOGLE_APPS_SCRIPT_URL": "@google-apps-script-url",
    "JWT_SECRET": "@jwt-secret",
    "ADMIN_USERNAME": "@admin-username",
    "ADMIN_PASSWORD_HASH": "@admin-password-hash"
  }
}
